import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the length of your array under 20: ");
        int len = sc.nextInt();
        while (len > 20) {
            System.out.print("Error, too large");
            len = sc.nextInt();

        }
            double[] num = new double[len];

            System.out.println("Enter your array values: ");
            for (int i = 0; i < num.length; i++) {
                num[i] = sc.nextDouble();
            }

            System.out.println("Array");
            for (int i = 0; i < len; i++) {
                System.out.println(num[i]);
            }

        }
    }
